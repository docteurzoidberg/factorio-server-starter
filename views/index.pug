extends layout

block scripts
  script.

    var lastStatus = null;

    function getStatus() {
      $(function () {
        $.getJSON(
          "/status",
          function (json) {
            if(json.running != lastStatus) {
                if(lastStatus===null) {
                    lastStatus = json.running;
                } else {
                    document.location.href="/";
                }
            }

            console.dir(json);
          }
        );
      });
    }

    $(document).ready(function () {
        setInterval(getStatus, 5000);
    });

block content

  if(serverstatus.running)
    include online
  else
    include offline
  if(status)
    p
      |Server:
      =status


